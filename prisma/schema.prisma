generator client {
  provider = "prisma-client-js"
  // previewFeatures = ["fullTextIndex", "fullTextSearch"]
}

datasource db {
  provider = "mongodb" // "mysql", "postgresql"
  url      = env("DATABASE_URL")
}

model Task {
  //id        String   @id @default(uuid()) // for mysql, postgresql
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  title     String

  // @@fulltext([title]) // for mysql
}
